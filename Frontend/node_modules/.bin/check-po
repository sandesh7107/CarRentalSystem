#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/bash" ]; then
  exec "$basedir//bin/bash"  "$basedir/../i18n-abide/bin/check-po.sh" "$@"
else 
  exec /bin/bash  "$basedir/../i18n-abide/bin/check-po.sh" "$@"
fi
